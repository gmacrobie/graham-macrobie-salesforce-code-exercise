						headerRow += '<td class="totals">{!JSENCODE($Label.PPG_LBL_Most_Recent_Payment_Date)} :</td>';
						headerRow += '<td class="totalValues">' + rows.data().pluck('mostRecentPayerPaymentDate')[0] + '</td>';
						headerRow += '</tr>';

						headerRow += '</table>';
						headerRow += '</td>';

